@import 'fonts'

//FONT SIZES

element-boxes-size=1.4em
title-boxes-size=1.5em

//COLORS

light-green=#C4C9A8
middle-green=#8b8f76
dark-green=#3e4a40
brown=#a57f68
dark-brown=#7e644b 

//FONTS

title-font='Lobster'
text-font='Poiret One'
subtitle-font='Oswald'

//MIXINS

vendor(prop, args)
    if prop=='display' 
        if args=='flex'
            {prop} -webkit- + args
            {prop} args
        else
            {prop} args    
    else    
        -webkit-{prop} args
        {prop} args

display()
    vendor('display', arguments)   

flex-direction()
    vendor('flex-direction', arguments)         

flex-wrap()
    vendor('flex-wrap', arguments)

flexx()
    vendor('flex', arguments)    

order()
    vendor('order', arguments)    

justify-content()
    vendor('justify-content', arguments)  

flex-flow()
    vendor('flex-flow', arguments)  

align-items()
    vendor('align-items', arguments)

align-content()
    vendor('align-content', arguments) 

flex-config()    
    flex-direction arguments[0]
    flex-wrap arguments[1]
    if arguments[2]!='0'
        justify-content arguments[2]
    if arguments[3]!='0'
        align-items arguments[3]
    if arguments[4]!='0'    
        align-content arguments[4]  

//BASIC SETTINGS

a 
    color #7E644B
    text-decoration none
    
a:hover
    color #3E4A40

ul 
    padding 0 
    list-style none     

.icon
    color #3E4A40

img
    width 100%
    height auto    


//COMMON PARTS

body
    font-size 16px
    background-color light-green 
    font-family text-font

.wrapper
    display flex
    flex-config row wrap 0 0 0

.wrapper > * 
    padding: 10px
    flexx: 1 100%

.header
    background dark-green
    font-family title-font
    color brown
    font-size 3em
    padding 0 0.3em 0.2em 0.3em
    display flex
    flex-config row wrap space-between 0 0 

.main
    flex-flow row wrap
    justify-content space-around
    
.navigation
    display flex
    flex-config row no-wrap flex-end 0 0
    margin 0.2em 0 0 0
    padding 0

.navigation a
    padding 0.5em
    text-align center   
    display block
    font-size 0.5em
    color middle-green

.navigation a:hover
    color brown  

.aside-right
    background middle-green
    padding-top 1.5em

.footer
    background brown
    color dark-green
    font-family title-font
    text-align center
    
@media all and (min-width : 480px) 
    .aside-right  
        flexx 1 
    .main
        order 2
        flexx 3 0px
    .header
        order 1    
    .aside-right  
        order 3 
    .footer   
        order 4 
    .navigation
        justify-content space-around

@media all and (min-width: 1024px)
    .angular-google-map-container 
        width 1000px

@media all and (max-width: 1024px)
    .angular-google-map-container 
        width 700px          

@media all and (max-width : 768px) 
    .header
        justify-content space-around
    .angular-google-map-container 
        width 480px

@media all and (max-width : 480px)
    .title
        text-align center   
    .navigation
        flex-flow column wrap
        padding 0
    .angular-google-map-container 
        width 260px    

