.responsive-circle-container
    width 30%
    margin 0 auto

.responsive-circle 
    border-radius: 50%
    border 5px solid #a57f68
    margin-bottom 0.5em
    margin: 0 auto 20px
    width: 100%
    display block

.responsive-circle::after
    border-radius: 50%
    content: ""
    display: block
    height: auto
    //margin-bottom: 20px
    padding-bottom: 100%
    width: 100%

.responsive-circle div
    color: white
    float: left
    line-height: 1em
    margin-top: -0.5em
    padding-top: 50%
    text-align: center
    width: 100%

.img-circle::after
    background: url("https://placekitten.com/400/400") repeat scroll 0 0 / cover

