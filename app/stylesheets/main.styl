@import 'fonts'

//BASIC SETTINGS

a 
    color #7E644B
    text-decoration none
    
a:hover
    color #3E4A40

ul 
    padding 0 
    list-style none     

.icon
    color #3E4A40

img
    width 100%
    height auto    


//COMMON PARTS

body
    font-size 16px
    background-color #C4C9A8 

.wrapper
    display flex
    flex-direction row
    flex-wrap wrap

.wrapper > * 
    padding: 10px
    flex: 1 100%

.header
    background #3E4A40
    font-family 'Lobster'
    color #A57F68
    font-size 3em
    padding 0 0.3em 0.2em 0.3em
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between   

.main
    flex-flow row wrap
    justify-content space-around

.navigation
    display flex
    flex-direction row
    flex-wrap no-wrap
    justify-content flex-end
    margin 0.2em 0 0 0
    padding 0

.navigation a
    padding 0.5em
    text-align center   
    display block
    font-size 0.5em
    color #8B8F76

.navigation a:hover
    color #A57F68   

.aside-right
    background #8B8F76

.footer
    background #A57F68
    color #3E4A40
    font-family 'Lobster'
    text-align center
    
@media all and (min-width : 480px) 
    .aside-right  
        flex 1 auto 
    .main
        flex 3 0px
    .header
        order 1    
    .main     
        order 2 
    .aside-right  
        order 3 
    .footer   
        order 4 
    .navigation
        justify-content space-around

@media all and (max-width : 767px) 
    .header
        justify-content space-around

@media all and (max-width : 480px)
    .title
        text-align center   
    .navigation
        flex-flow column wrap
        padding 0
        

//BLOG POST LIST & USERS LIST

.flex-container
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-around
    align-items center
    align-content flex-start

.flex-item-postlist
    margin: auto

.flex-item
    margin: auto    

.blog-post-item, .users-list
    margin 0em 0em .5em 0em
    border-bottom 3px dashed #A57F68
    background-color #979A85

.blog-post-link, .user-link
    font-family 'Oswald'
    padding 0.5em 0.5em 0.5em 0.5em

//PAGINATOR

.simple-pagination
    font-family 'Oswald'
    display flex
    flex-direction row
    flex-wrap wrap  
    justify-content space-between
    align-items baseline
    align-content center

.simple-pagination p
    margin 0 0.5em 0 0   
    
.simple-pagination__items
    color #7e644b

.simple-pagination__pages   
    color #3e4a40

.simple-pagination__page-limit a
    color #3e4a40
    
.simple-pagination__page-limit a:hover
    color #7e644b    

.simple-pagination__button


//BLOG POST

.blog-post-header
    font-family 'Oswald'
    color #7E644B   

.blog-post-body, .blog-post-user, .blog-post-comments   
    font-family 'PoiretOne' 
    color #3E4A40

.comments-list
    list-style-type none

.subtitle
    background #8B8F76
    font-family 'PoiretOne' 
    color #3E4A40
    padding 0.2em
    width 99%
    display block
